# ============================================
# Trading Bots Configuration File
# Copy this file to .env and fill in your credentials
# ============================================

# ============================================
# Upstox API Configuration (Indian Stock Trading)
# ============================================
UPSTOX_API_KEY=your_upstox_api_key_here
UPSTOX_API_SECRET=your_upstox_api_secret_here
UPSTOX_ACCESS_TOKEN=your_access_token_here
UPSTOX_REFRESH_TOKEN=your_refresh_token_here
UPSTOX_ENVIRONMENT=sandbox

# ============================================
# Coinbase API Configuration (Crypto Trading)
# ============================================
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_ENVIRONMENT=sandbox

# ============================================
# External API Keys (for research)
# ============================================
# CoinGecko API (free tier available)
COINGECKO_API_KEY=your_coingecko_key_here

# DexScreener (free, no API key needed)
# Allium Labs (optional, subscription)
ALLIUM_API_KEY=your_allium_key_here

# ============================================
# Trading Rules Configuration
# ============================================
# Entry Rules
MAX_PUMP_PERCENTAGE=200  # Don't buy if pumped more than 200%
MIN_PULLBACK_PERCENT=20  # Minimum 20% pullback required
MAX_PULLBACK_PERCENT=40  # Maximum 40% pullback allowed
MIN_LIQUIDITY_USD=50000  # Minimum $50k liquidity for crypto

# Exit Rules
TAKE_PROFIT_1=2.0     # 2x target
TAKE_PROFIT_2=5.0     # 5x target  
TAKE_PROFIT_3=10.0    # 10x target
STOP_LOSS_PERCENT=20  # Hard stop at -20%

# Position Sizing
MAX_POSITION_PERCENT=2      # Max 2% per trade
MAX_POSITION_USD=40         # Max $40 per trade (for small accounts)
MAX_PORTFOLIO_PER_ASSET=10  # Max 10% in single asset

# Daily Limits
MAX_TRADES_PER_DAY=3
MAX_LOSSES_PER_DAY=1
MAX_DAILY_LOSS_PERCENT=5

# Volatility Filter
SKIP_HIGH_VOLATILITY=true
VIX_THRESHOLD=30
MAX_HOURLY_SWING=50

# Time-Based Rules
RESPECT_MARKET_HOURS=true

# Logging
ENABLE_LEARNING_LOGS=true
TRADE_MEMORY_FILE=memory/trades.json
